rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /businesses/{document=**} {
    	allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == resource.data.createdBy.uid || isAdmin();
    }
    match /events/{document=**} {
      allow read: if isAdmin();      
	    allow write: if request.auth.uid != null;
    }
    match /projects/{document=**} {
      allow read, write: if isAdmin() || isReferrer();      
    }
    match /students/{userId}/{document=**} {
      allow read: if request.auth.uid != null || isAdmin() || isReferrer() || isBusiness();
      allow write: if request.auth.uid == userId || isAdmin();
    }
		match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId
    }
    
    function getUserData(){
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    function isAdmin(){
      return getUserData().roles.isAdmin;
    }
    function isReferrer(){
      return getUserData().roles.isReferrer;
    }
    function isStudent(){
      return getUserData().roles.isStudent;
    }
    function isBusiness(){
      return getUserData().roles.isBusiness;
    }
  }
}